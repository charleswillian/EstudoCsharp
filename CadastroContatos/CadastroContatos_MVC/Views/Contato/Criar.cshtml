@model ContatoModel
@{
    ViewData["Title"] = "Criar contato";
}


<div class="text-center">
    <h1 class="display-4">Criar contato</h1>
</div>

<form asp-controller="Contato" asp-action="Criar" method="post">
  <div class="mb-3">
    <label for="nome" >Nome</label>
    <input type="text" asp-for="name" class="form-control" placeholder="Digite o nome do contato">
  </div>

  <div class="mb-3">
    <label for="email" >Email</label>
    <input type="text" asp-for="email" class="form-control" placeholder="Digite o e-mail do contato">
  </div>

  <div class="mb-3">
    <label for="celular" >Celular</label>
    <input type="text" asp-for="celular" class="form-control" placeholder="Digite o Celular do contato">
  </div>

  <button type="submit" class="btn btn-primary">Adicionar</button>
  <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Voltar</a>
</form>